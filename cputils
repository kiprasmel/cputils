#!/usr/bin/env bash
# cputils - competitive programming utilities

DIRNAME="$(dirname "$0")"

case "$1" in
	new)
		shift
		/usr/bin/env bash "$DIRNAME/cputils-new" $*
		;;
	n)
		shift
		/usr/bin/env bash "$DIRNAME/cputils-new" $*
		;;
	run)
		shift
		/usr/bin/env bash "$DIRNAME/cputils-run" $*
		;;
	d)
		shift
		/usr/bin/env bash "$DIRNAME/cputils-run" "DEBUG" $*
		;;
	p)
		shift
		/usr/bin/env bash "$DIRNAME/cputils-run" "EVAL" $*
		;;
	cfgen)
		shift
		/usr/bin/env bash "$DIRNAME/cputils-cfgen" $*
		;;
	*)
		printf "\
usage:

cputils COMMAND [COMMAND_ARGS...]

COMMAND:
        new        - new file from template      (alias n)
		run DEBUG  - run in debug           mode (alias cputils d)
		run EVAL   - run in eval/production mode (alias p)
        cfgen      - codeforces generator from template
	

see individual commands for details

"
		exit 1
		;;
esac

